<!--Bootstrap stílus implementálása-->
<link href="~/Content/bootstrap.css" rel="stylesheet" />

@model IEnumerable<RazorViewEngineExample.Models.ViewModels.EmployeeViewModel>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2 align="center">Index</h2>

@ViewBag.MessageRVE

<!--RazorViewEngine példa bemutatása-->
<div class="container" style="width:40%;margin-top:2%">
    <!--Egyetlen mondat/soros block elkészítése-->
    @{ 
        string question = "Hogy vagy ma?";

        <b>Kérdés változó értéke: @question</b>
    }

    <!--Több változós block elkészítése-->
    @{ 
        string message = "Több változós block elkészítése...";
        int i = 2;
        int j = 3;
        int k = i + j;

        <!--A HTML kód elhelyezhető a Block-on belül, de...-->
        <p></p>
        <b>@message</b>
        <div>
            <b>@i + @j = @k</b>
        </div>
    }

    <!--A blockon kívül is elhelyezhetőek-->
    <p></p>
    <b>@message</b>
    <div>
        <b>@i + @j = @k</b>
    </div>

    <!--Mai nap kiírása-->
    <p></p>
    <div>
        A mai nap @DateTime.Now.DayOfWeek van!
    </div>

    <!--Ciklus elkészítése-->
    <p></p>
    <div>Ciklus elkészítése...</div>

    @for(int l = 0; l < 10; l++)
    {
        <div>
            Ciklusváltozó értéke: @l
        </div>
    }

    <!--IF függvény elkészítése-->
    <p></p>
    <div>IF Függvény elkészítése...</div>
    @{ 
        int number = 6;
    }

    @if(number % 2 == 0)
    {
        <div>
            @number egy páros szám!
        </div>
    }
    else
    {
        <div>
            @number nem egy páros szám!
        </div>
    }
</div>