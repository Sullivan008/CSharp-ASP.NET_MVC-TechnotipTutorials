@model CreateLoginExample.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Bejelentkezés";
}

<div class="panel panel-body">
    <div class="col-md-3">
        <div class="panel panel-default">

            <div class="thumbnail">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Üzenet</h3>
                    </div>
                </div>

                <img src="~/Content/Images/picture12415890781875.png" alt="..." style="margin-top:-20px" />
                <div class="caption">
                    <h3>Az Igazgató</h3>
                    <p>&para;Üdvözlet!  Próbálom megvalósítani az MVC csodálatos titkait, ezen Tutorial sorozat keretein belül. &para;</p>
                    <p><a href="#" class="btn btn-primary" role="button">Bővebben</a></p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9" align="center">
        <form id="registrationForm">
            <h2 align="center">Bejelentkezés</h2>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => Model.EmailID, new { @class = "form-control", @placeholder = "E-mail cím" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.PasswordFor(m => Model.Password, new { @class = "form-control", @placeholder = "Jelszó" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <a href="#" class="btn btn-primary" onclick="LoginUser()">
                        Bejelentkezés
                        <i class="glyphicon glyphicon-log-in"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    var LoginUser = function () {
        var data = $("#registrationForm").serialize();
        $.ajax({
            type: "POST",
            url: "/Example/LoginUser",
            data: data,
            success: function (response) {
                if (response === "NotFound") {
                    window.location.href = "/Example/Login";
                } else if (response === "Admin") {
                    window.location.href = "/Example/Admin";
                } else {
                    window.location.href = "/Example/Index";
                }
            }
        });
    }
</script>