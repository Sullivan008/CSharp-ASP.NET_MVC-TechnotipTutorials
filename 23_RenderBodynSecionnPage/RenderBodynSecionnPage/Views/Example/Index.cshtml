<!--Modell definiálása-->
@model RenderBodynSecionnPage.Models.ViewModels.EmployeeViewModel

@{
    ViewBag.Title = "Index";
}

<h2 align="center">Index</h2>

<!--Dolgozó adatainak megjelenítése-->
<div class="container" style="width:40%;margin-top:2%">
    <!--Amint látható, egy RenderPage bárhol használható az alkalmazáson belül-->
    @RenderPage("/Views/Shared/_LoginPartial.cshtml");

    <table class="table table-responsive">
        <!--Fejléc elkészítése-->
        <tr>
            <th>Név</th>
            <th>Osztály</th>
            <th>Cím</th>
            <th>Törlés</th>
        </tr>
        <!--Adatok megjelenítése-->
        <tbody>
            @if (ViewBag.Employees != null)
            {
                foreach (var item in ViewBag.Employees)
                {
                    <!--Minden sort megcímkézzük az EmployeeID-val, annak érdekében, hogyha egy sikeres törlést
                        hajtunk végre, akkor tudjuk, hogy melyik tábla sort kell kitörölni, azaz melyik ID-jú sorra
                        hivatkozzunk-->
                    <tr id="row_@item.EmployeeID">
                        <td>@item.Name</td>
                        <td>@item.DepartmentName</td>
                        <td>@item.Adress</td>
                        <!--Törlés gomb elkészítése-->
                        <td>
                            <a href="#" class="btn btn-danger" onclick="ConfirmDeleteEmployee(@item.EmployeeID)">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </td>
                        <!--Dolgozói adatok megmutatásához szükséges gomb elkészítése-->
                        <td>
                            <a href="#" class="btn btn-success" onclick="ShowEmployeeDetails(@item.EmployeeID)">
                                <i class="glyphicon glyphicon-eye-open"></i>
                            </a>
                        </td>
                        <!--Dolgozói adatok szerkesztéséhez szükséges gomb elkészítése-->
                        <td>
                            <a href="#" class="btn btn-primary" onclick="EditEmployeeDetails(@item.EmployeeID)">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div style="text-align: center">
        <!--Új dolgozó hozzáadása Gomb elkészítése-->
        <a href="#" class="btn btn-primary" align="center" onclick="EditEmployeeDetails(0)">Új dolgozó hozzáadása</a>
    </div>

    <div style="text-align: center">
        <p></p>
        <!--Másdik oldalra navilágó gomb elkészítése-->
        <a href="/Example/SecondPage" class="btn btn-primary" align="center">Navigálás a második oldalra</a>
    </div>

    <!--Tárolni fogjuk a törlendő EmployeeID-t, hogy mind a két függvény (Confirm&Delete) el tudja érni a törlendő ID-tv -->
    <input type="hidden" id="hiddenEmployeeID" />

    <!--Delete Employee Popup window elkészítése-->
    <div class="modal fade" id="deleteEmployeeModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!--Header elkészítése-->
                <div class="modal-header">
                    <!--Close button elkészítése a fejléchez-->
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <!--Címsor kiírása-->
                    <h3 class="modal-title" align="center">Törlés megerősítése</h3>
                </div>
                <!--Törzs elkészítése-->
                <div class="modal-body">
                    <h4>Valóban törölni szeretnéd ezt a dolgozót?</h4>
                    <!--Loading gif beszúrása-->
                    <div style="text-align:center;display:none" id="loaderGIFDiv">
                        <img src="~/Content/InternetSlowdown_Day.gif" width="150" />
                    </div>
                </div>
                <!--Lábjegyzet/Alsó rész elkészítése-->
                <div class="modal-footer">
                    <a href="#" class="btn btn-danger" data-dismiss="modal">Nem</a>
                    <a href="#" class="btn btn-success" onclick="DeleteEmployee()">Igen</a>
                </div>
            </div>
        </div>
    </div>

    <!--Employee Detail Popup window elkészítése-->
    <div class="modal fade" id="employeeDetailModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!--Header elkészítése-->
                <div class="modal-header">
                    <!--Close button elkészítése a fejléchez-->
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <!--Címsor kiírása-->
                    <h3 class="modal-title" align="center">Employee adatai</h3>
                </div>
                <!--Törzs elkészítése-->
                <div class="modal-body" id="employeeDetailModalBody"></div>
                <!--Lábjegyzet/Alsó rész elkészítése-->
                <div class="modal-footer">
                    <a href="#" class="btn btn-success" data-dismiss="modal">OK</a>
                </div>
            </div>
        </div>
    </div>

    <!--Edit Employee Popup window elkészítése-->
    <div class="modal fade" id="editOrNewEmployeeModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!--Header elkészítése-->
                <div class="modal-header">
                    <!--Close button elkészítése a fejléchez-->
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <!--Címsor kiírása-->
                    <h3 class="modal-title" align="center">Dolgozó Szerkesztése</h3>
                </div>
                <!--Törzs elkészítése-->
                <div class="modal-body" id="employeeEditOrNewModalBody">

                </div>
                <!--Lábjegyzet/Alsó rész elkészítése-->
                <div class="modal-footer">
                    <a href="#" class="btn btn-danger" data-dismiss="modal">Visza</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Adatok törlése JQuery AJAX segítségével-->
<script>
    /// ConfirmDeleteEmployee függvény megvalósítása. Megnyit egy Popup Window-ot,
    /// amelyben meg kell erősítenie a felhasználónak hogy tényleg szeretné-e azt
    /// a dolgozót törölni, amelyre rákattintott (Paraméterben megkapja az ID-ját)
    var ConfirmDeleteEmployee = function (EmployeeID) {
        /// A kiválasztott EmployeeID értékének átadása
        $("#hiddenEmployeeID").val(EmployeeID);

        /// Popup Window Megnyitása
        $("#deleteEmployeeModal").modal('show');
    }

    /// Törlési metódus végrehajtása. Kitörli azt az Employee-t az adatbázisból
    /// amelynek az ID-ját korábban megkapta
    var DeleteEmployee = function () {
        /// Loading Gif engedélyezése
        $("#loaderGIFDiv").show();

        /// A korábban a ConfirmDeleteEmployee függvényben a hiddenEmployeeID-nak
        /// átadott ID-t kiolvassuk
        var employeeID = $("#hiddenEmployeeID").val();

        /// AJAX - Asyncron JavaScript And XML
        $.ajax({
            type    : "POST",                           /// Kérés típusa
            url     : "Example/DeleteEmployee",         /// Hol érhető el (Controller/MethodName)
            data    : { EmployeeID: employeeID },       /// A törlendő objektumok ID-ja JSON adatként
            success : function (result) {               /// Ha skeresen lefutott az AJAX kérés
                $("#loaderGIFDiv").hide();
                $("#deleteEmployeeModal").modal("hide");

                /// Táblázat frissítése, azaz a row_employeeID-jú sor törlése
                $("#row_" + employeeID).remove();
            }
        })
    }

    /// ShowEmployeeDetail függvény megvalósítása. AJAX Kérés segítségével, meg fog hívni
    /// egy metódust, amely egy PartialView-on keresztül megjeleníti a paraméterben kapott
    /// ID-jú Employee objektum adatait
    var ShowEmployeeDetails = function (EmployeeID) {
        /// AJAX - Asyncron JavaScript And XML
        $.ajax({
            type    : "POST",                           /// Kérés típusa
            url     : "Example/ShowEmployeeDetails",    /// Hol érhető el (Controller/MethodName)
            data    : { EmployeeID: EmployeeID },       /// A törlendő objektumok ID-ja JSON adatként
            success : function (response) {             /// Ha skeresen lefutott az AJAX kérés
                /// Az eredményként kapott PartialView-ot betöltjük a PopupWindow törzsébe
                $("#employeeDetailModalBody").html(response);

                /// Popup Window megjelenítése
                $("#employeeDetailModal").modal("show");
            }
        })
    }

    /// EditEmployee függvény megvalósítása. AJAX Kérés segítségével, meg fog hívni
    /// egy metódust, amely egy PartialView-on keresztül megjeleníti a paraméterben kapott
    /// ID-jú Employee objektum adatait amelyeket szerkeszteni lehetlesz
    var EditEmployeeDetails = function (EmployeeID) {
        /// AJAX - Asyncron JavaScript And XML
        $.ajax({
            type: "POST",                           /// Kérés típusa
            url: "Example/EditOrNewEmployee",      /// Hol érhető el (Controller/MethodName)
            data: { EmployeeID: EmployeeID },       /// A törlendő objektumok ID-ja JSON adatként
            success: function (response) {             /// Ha skeresen lefutott az AJAX kérés
                /// Az eredményként kapott PartialView-ot betöltjük a PopupWindow törzsébe
                $("#employeeEditOrNewModalBody").html(response);

                /// Popup Window megjelenítése
                $("#editOrNewEmployeeModal").modal("show");
            }
        })
    }
</script>

