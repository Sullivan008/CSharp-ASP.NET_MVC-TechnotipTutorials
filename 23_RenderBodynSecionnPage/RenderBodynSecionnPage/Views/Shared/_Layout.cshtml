<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Example Application</title>

    <!--Betölti az összes CSS fájl-t és Script-et amire nekünk szükségünk van-->
    <!--Lásd tovább BundleConfig.cs fájl-t...-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Example Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
       
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Example Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    <!--Az Index.cshtml-en létrehozott Section betöltése a Layout-ba-->
    @RenderSection("MySection", required: false)

    <!--A Layout-ra betölt egy másik, korábban elkészített oldalt
        Különbség a Partial-al szemben, hogy közvetlenül az Output
        Stream-re íródnak az adatok, nem pedig egy Buffer-ba. A partial-nál
        egy HTML String tér vissza!-->
    @RenderPage("/Views/Shared/_LoginPartial.cshtml");
    @RenderPage("/Views/Shared/_LoginPartial.cshtml");
</body>
</html>
