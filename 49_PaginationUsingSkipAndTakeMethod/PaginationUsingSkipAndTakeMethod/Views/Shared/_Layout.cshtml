<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Example Application</title>

    <!--Betölti az összes CSS fájl-t és Script-et amire nekünk szükségünk van-->
    <!--Lásd tovább BundleConfig.cs fájl-t...-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
</head>
<body>
    <!--Navigációs Bar elkészítése-->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">

            <!--A gombok egy csoportba való gyűjtése-->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <!--Home gomb elkészítése-->
                    @if (Session["UserID"] != null)
                    {
                        <li><a href="/Example/Index"><span class="glyphicon glyphicon-home"></span></a></li>
                    }
                    else
                    {
                        <li><a href="/Home/Index"><span class="glyphicon glyphicon-home"></span></a></li>
                    }

                    <!-- A szolgáltatások üsszegyűjtése egy lenyíló fülbe -->
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Szolgáltatások <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu" id="myTab">
                            <li role="presentation"><a href="#music" aria-controls="music" role="tab" data-toggle="tab"><span class="glyphicon glyphicon-music"> </span> Zene és tánc</a></li>
                            <li class="divider"></li>
                            <li role="presentation"><a href="#training" aria-controls="training" role="tab" data-toggle="tab"><span class="glyphicon glyphicon-book"> </span> Tréningek</a></li>
                            <li class="divider"></li>
                            <li role="presentation"><a href="#website" aria-controls="website" role="tab" data-toggle="tab"><span class="glyphicon glyphicon-cloud"> </span> Weboldal Design</a></li>
                        </ul>
                    </li>
                    <!--Rólunk gomb elkészítése-->
                    <li><a href="#">Rólunk</a></li>
                    <!--Karrier gomb elkészítése-->
                    <li><a href="#">Karrier</a></li>
                </ul>

                <!--Keresés mező és Keresés gomb elkészítése-->
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Keresés">
                    </div>
                    <button type="submit" class="btn btn-default">Keres</button>
                </form>

                <!--Vizsgálat, hogy a Session-ban már van-e eltárolva bejelentkezett
                    felhasználó, hiszen a fejléc jobb sarkát ennek függvényében fogjuk
                    megjeleníteni-->
                @if (Session["UserID"] != null)
                {
                    <!--Üdvözlő és Kijelentkezés gomb elkészítése-->
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Üdvözöllek: @Session["UserName"]</a></li>
                        <li><a href="/Example/Logout">Kijelentkezés</a></li>
                    </ul>
                }
                else
                {
                    <!--Bejelentkezés és Regisztrációs gomb elkészítése-->
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/Example/Login">Bejelentkezés</a></li>
                        <li><a href="/Example/Registration">Regisztráció</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <div class="container body-content">

        @RenderBody()

        <hr />
    </div>

    <!--Lábléc elkészítése-->
    <div class="well" style="background-color:#000000;color:wheat;margin-bottom:0px">
        <div class="col-lg-4" style="margin-left:20px">
            <h3><span class="glyphicon glyphicon-map-marker"></span> Cím</h3>
            <ul class="list-group list-unstyled">
                <li>Teszt Zrt.</li>
                <li>Teszt Utca 68.</li>
                <li>Teszt Város</li>
            </ul>
        </div>

        <div class="col-lg-4">
            <h3><span class="glyphicon glyphicon-cog"></span> Szolgáltatások</h3>
            <ul class="list-group list-unstyled">
                <li><span class="glyphicon glyphicon-music"></span><a href="#"> Zene és Tánc</a></li>
                <li><span class="glyphicon glyphicon-book"></span><a href="#"> Tréningek</a></li>
                <li><span class="glyphicon glyphicon-globe"></span><a href="#"> Weboldal Design</a></li>
            </ul>
        </div>

        <div class="col-lg-3">
            <h3><span class="glyphicon glyphicon-briefcase"></span> Karrier</h3>
            <ul class="list-group list-unstyled">
                <li><span class="glyphicon glyphicon-music"></span><a href="#"> Zene és Tánc</a></li>
                <li><span class="glyphicon glyphicon-book"></span><a href="#"> Tréningek</a></li>
                <li><span class="glyphicon glyphicon-globe"></span><a href="#"> Weboldal Design</a></li>
            </ul>
        </div>

        <div style="clear:both"></div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!--SCRIPT-ek implementálása-->
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>

    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />

    @RenderSection("scripts", required: false)
</body>
</html>
